Vagrant.configure("2") do |config|
  config.vm.box = "scotch/box"
  config.vm.network "private_network", ip: "__IPADDRESS__"
  config.vm.hostname = "scotchbox"
  config.vm.synced_folder ".", "/var/www", :mount_options => ["dmode=777", "fmode=666"]

  # Use hostonly network with a static IP Address
  # and enable hostmanager
  config.hostmanager.enabled = true
  config.hostmanager.manage_host = true
  config.vm.define '__PROJECT_NAME_SIMPLE__' do |node|
    node.vm.hostname = '__DEV_URL__'
    node.vm.network :private_network, ip: '__IPADDRESS__'
    node.hostmanager.aliases = %w(www.__DEV_URL__)
  end
  config.vm.provision :hostmanager
end
